<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MiscActivity">


    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/misc_fragment"
        android:name="com.redbox.octolendar.fragments.MiscFragment"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorScrollBack"
        app:itemIconTint="@color/navbar_item_selected_color"
        app:itemTextColor="@color/navbar_item_selected_color"
        app:menu="@menu/bottom_nav_menu"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="3dp">

    </android.support.design.widget.BottomNavigationView>

</RelativeLayout>