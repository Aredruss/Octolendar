<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id = "@+id/calendarRelativeLayout">
    <LinearLayout
        android:id="@+id/calendarFragmentLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <CalendarView
            android:id="@+id/fragmentCalendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/monthProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="100" />

            <TextView
                android:id="@+id/monthProgressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/droid_sans_mono"
                android:text="@string/string_sample_progress"
                android:textSize="18sp" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/boredCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_25dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_25dp"
            android:elevation="@dimen/dimen_10dp"
            app:cardCornerRadius="@dimen/dimen_info_card_corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/boredTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:fontFamily="@font/droid_sans_mono"
                    android:lines="2"
                    android:text="@string/string_sample_text"
                    android:textAlignment="center"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/boredButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:layout_marginBottom="@dimen/dimen_25dp"
                    android:background="@color/colorAccent"
                    android:elevation="@dimen/dimen_10dp"
                    android:paddingLeft="@dimen/dimen_elevation"
                    android:paddingRight="@dimen/dimen_elevation"
                    android:text="@string/string_bored_button" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>