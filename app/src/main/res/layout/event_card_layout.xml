<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/eventCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_15dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/gradient_back"
            android:showDividers="middle">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="@dimen/dimen_10dp">

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_25dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:layout_weight="3"
                    android:focusable="false"
                    android:fontFamily="@font/droid_sans_mono"
                    android:text="TextView"
                    android:textSize="@dimen/dimen_font_size"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/doneCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:layout_marginEnd="@dimen/dimen_25dp"
                    android:layout_weight="0"
                    android:buttonTint="@color/colorCheck"
                    android:text="@string/string_navbar_title"
                    android:textColorLink="@color/colorPrimary" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutMode="clipBounds">

                <TextView
                    android:id="@+id/commentTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_25dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginBottom="@dimen/dimen_15dp"
                    android:layout_weight="2"
                    android:focusable="false"
                    android:fontFamily="@font/droid_sans_mono"
                    android:text="TextView"
                    android:textSize="@dimen/dimen_smaller_font"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/timeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginEnd="@dimen/dimen_30dp"
                    android:layout_weight="0"
                    android:accessibilityHeading="true"
                    android:fadingEdge="none"
                    android:fontFamily="@font/droid_sans_mono"
                    android:text="вввв"
                    android:textSize="@dimen/dimen_smaller_font"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/dimen_15dp">

                <TextView
                    android:id="@+id/urgencyTextView"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/dimen_25dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:focusable="false"
                    android:fontFamily="@font/droid_sans_mono"
                    android:forceHasOverlappingRendering="false"
                    android:text="TextView"
                    android:textStyle="bold" />

            </TableRow>
        </TableLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>