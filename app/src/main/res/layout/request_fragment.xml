<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/boredCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_25dp"
        android:layout_marginTop="@dimen/dimen_60dp"
        android:layout_marginRight="@dimen/dimen_25dp"
        android:elevation="@dimen/dimen_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/boredTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_25dp"
                android:fontFamily="@font/droid_sans_mono"
                android:text="@string/string_sample_text" />

            <Button
                android:id="@+id/boredButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_25dp"
                android:elevation="@dimen/dimen_elevation"
                android:text="@string/string_bored" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>