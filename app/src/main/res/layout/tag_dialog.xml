<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical">

    <EditText
        android:id="@+id/tagNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:fontFamily="@font/droid_sans_mono"
        android:hint="@string/string_tag_placeholder"
        android:inputType="textPersonName"
        android:maxLength="8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.design.chip.ChipGroup
            android:id="@+id/colorGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipSpacing="@dimen/dimen_10dp"
            app:singleLine="false"
            app:singleSelection="true">

            <android.support.design.chip.Chip
                android:id="@+id/green"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="@dimen/dimen_60dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorCardText"
                app:checkedIcon="@drawable/ic_check_circle"
                app:chipBackgroundColor="@color/colorTagHome" />

            <android.support.design.chip.Chip
                android:id="@+id/black"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="@dimen/dimen_60dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorCardText"
                app:checkedIcon="@drawable/ic_check_circle"
                app:chipBackgroundColor="@color/colorDarker" />

            <android.support.design.chip.Chip
                android:id="@+id/blue"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="@dimen/dimen_60dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorCardText"
                app:checkedIcon="@drawable/ic_check_circle"
                app:chipBackgroundColor="@color/colorTagWork" />

        </android.support.design.chip.ChipGroup>


    </LinearLayout>

</LinearLayout>