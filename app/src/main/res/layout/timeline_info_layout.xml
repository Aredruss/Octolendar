<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dateTimelineTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:fontFamily="@font/droid_sans_mono"
        android:gravity="center"
        android:text="@string/string_sample_text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/titleTimelineTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:fontFamily="@font/droid_sans_mono"
        android:gravity="center"
        android:text="@string/string_sample_text"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/commentTimelineTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/droid_sans_mono"
        android:gravity="center"
        android:text="@string/string_sample_text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/urgencyTimelineTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:fontFamily="@font/droid_sans_mono"
        android:gravity="center"
        android:text="@string/string_sample_text" />
</LinearLayout>